{
  "name": "@dnb-hugo/robots",
  "version": "1.0.5",
  "description": "Configurable robots.txt for Hugo",
  "author": "Patrick Kollitsch <patrick@davids-neighbour.com>",
  "homepage": "https://github.com/dnb-hugo/components/tree/master/robots",
  "license": "MIT",
  "scripts": {
    "release": "standard-version --release-as patch -a -t \"robots/v\" --releaseCommitMessageFormat \"chore(release): robots/v{{currentTag}}\" && git push --follow-tags origin main",
    "release-next": "standard-version --release-as minor -a -t \"robots/v\" --releaseCommitMessageFormat \"chore(release): robots/v{{currentTag}}\" && git push --follow-tags origin main",
    "release-major": "standard-version --release-as major -a -t \"robots/v\" --releaseCommitMessageFormat \"chore(release): robots/v{{currentTag}}\" && git push --follow-tags origin main"
  },
  "bugs": {
    "url": "https://github.com/dnb-hugo/components/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@dnb-hugo/browserslist-config": "github:dnb-hugo/browserslist-config",
    "@dnb-hugo/commitlint-config": "github:dnb-hugo/commitlint-config",
    "@dnb-hugo/eslint-config": "github:dnb-hugo/eslint-config",
    "@dnb-hugo/remark-preset-lint": "github:dnb-hugo/remark-preset-lint",
    "@dnb-hugo/standard-version-config": "github:dnb-hugo/standard-version-config",
    "@dnb-hugo/stylelint-config": "github:dnb-hugo/stylelint-config",
    "@dnb-hugo/textlint-config": "github:dnb-hugo/textlint-config",
    "husky": "5.1.3",
    "standard-version": "9.1.0"
  },
  "standard-version": {
    "skip": {
      "changelog": true
    },
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      }
    ]
  },
  "private": true,
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        100
      ],
      "type-enum": [
        0,
        "always",
        [
          "feat",
          "fix",
          "layouts",
          "refactor",
          "test",
          "chore",
          "wip",
          "content"
        ]
      ]
    }
  }
}
