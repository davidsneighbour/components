{
  "name": "@dnb-hugo/components",
  "version": "1.0.2",
  "description": "David's Neighbour's repo of Hugo goodness",
  "private": true,
  "repository": "dnb-hugo/components.git",
  "author": {
    "name": "Patrick Kollitsch",
    "email": "patrick@davids-neighbour.com",
    "web": "https://davids-neighbour.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dnb-hugo/components/issues"
  },
  "homepage": "https://github.com/dnb-hugo/components#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "scripts": {
    "release": "standard-version --release-as patch -a",
    "release-next": "standard-version --release-as minor -a",
    "release-major": "standard-version --release-as major -a",
    "textlint": "textlint",
    "textlint-fix": "textlint --fix",
    "lint-md": "remark ."
  },
  "devDependencies": {
    "cz-conventional-changelog": "3.3.0",
    "cz-customizable": "6.3.0",
    "cz-customizable-ghooks": "2.0.0",
    "standard-version": "9.0.0",
    "commitizen": "4.2.2",
    "remark-preset-lint-dnb": "github:dnb-hugo/remark-preset-lint-dnb"
  },
  "standard-version": {
    "skip": {
      "changelog": true,
      "tag": true
    },
    "bumpFiles": [
      {
        "filename": ".version",
        "type": "plain-text"
      },
      {
        "filename": "package.json",
        "type": "json"
      }
    ]
  }
}
